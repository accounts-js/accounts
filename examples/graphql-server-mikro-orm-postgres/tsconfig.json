{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2021",
    "lib": ["es2021", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib"]
}
